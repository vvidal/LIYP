<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="        "
        android:textSize="28sp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:paddingTop="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="132dp"
            android:layout_height="105dp"
            android:src="@drawable/lyon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"/>

        <ImageButton
                android:id="@+id/buttonrecherche"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="0.41"
                android:src="@drawable/_recherche"
                android:background="#CC0000"
                android:textColor="#FFFFFF"
            android:clickable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.04"/>

        <ImageButton
            android:id="@+id/buttonhistorique"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="0.41"
            android:src="@drawable/_bons_plans"
            android:background="#CC0000"
            android:textColor="#FFFFFF"
            android:clickable="true" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"/>
        </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="15dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"/>
        <ImageButton
            android:id="@+id/buttonsejour"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="0.41"
            android:src="@drawable/_mon_sejour"
            android:background="#CC0000"
            android:textColor="#FFFFFF"
            android:clickable="true" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.04"/>
        <ImageButton
            android:id="@+id/buttonfavoris"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="0.41"
            android:src="@drawable/_mes_favoris"
            android:background="#CC0000"
            android:textColor="#FFFFFF"
            android:clickable="true" />
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.02"/>
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="76dp" >
    <Button
        android:id="@+id/connect"
        android:text="Mon Compte"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true" />
    </RelativeLayout>
</LinearLayout>
