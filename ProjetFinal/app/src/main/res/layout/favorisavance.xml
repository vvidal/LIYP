<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#CC0000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ic_sharewithfacebook"
            android:background="@drawable/ic_thumb_up_white_48dp"
            android:layout_weight="0.05"
            android:layout_width="1dp"
            android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/ic_ajouter"
            android:background="@drawable/_mon_sejour"
            android:layout_weight="0.05"
            android:layout_width="1dp"
            android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/ic_geoloc"
            android:background="@drawable/ic_room_white_24dp"
            android:layout_weight="0.05"
            android:layout_width="1dp"
            android:layout_height="60dp" />
        <ImageButton
            android:id="@+id/ic_supprimer"
            android:background="@drawable/ic_highlight_remove_white_24dp"
            android:layout_weight="0.05"
            android:layout_width="1dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listdetail"
        android:layout_gravity="center_horizontal" />
</LinearLayout>